generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
}

model RestaurantProfile {
  id            String   @id @default(uuid())
  name          String
  ownerName     String
  contact       String
  address       String   @db.Text
  gstNumber     String?
  bannerImage   String?
  paymentQrCode String?
  upiId         String?
  bannerImages  Json?    // Array of image URLs for the banner slider
  marqueeText   Json?    // Array of strings for the horizontal scrolling banner
  openTime      String
  closeTime     String
  isOpen        Boolean  @default(true)
  autoAccept    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Category {
  id        String     @id @default(uuid())
  name      String
  sortOrder Int        @default(autoincrement())
  items     MenuItem[]
  createdAt DateTime   @default(now())
}

model MenuItem {
  id          String      @id @default(uuid())
  name        String
  description String?
  variants    Json?       // Array of {name: string, price: number}
  image       String?
  isVeg       Boolean     @default(true)
  isAvailable Boolean     @default(true)
  categoryId  String
  category    Category    @relation(fields: [categoryId], references: [id])
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  OrderItems  OrderItem[]
}

model Order {
  id              String      @id @default(uuid())
  orderIdString   String      @unique @default(cuid())
  customerName    String
  customerMobile  String
  type            OrderType
  status          OrderStatus @default(PENDING)
  tableNumber     String?
  address         String?     @db.Text
  pickupTime      String?     // For takeaway orders
  rejectionReason String?     // Reason if rejected
  totalAmount     Float
  items           OrderItem[]
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id])
  menuItemId String?
  menuItem   MenuItem? @relation(fields: [menuItemId], references: [id], onDelete: SetNull)
  name       String // Snapshot in case name changes
  price      Float // Snapshot
  quantity   Int
}

enum OrderType {
  DINE_IN
  TAKEAWAY
  DELIVERY
}

enum OrderStatus {
  PENDING
  ACCEPTED
  REJECTED
  DELIVERED
}

model User {
  id                String   @id @default(uuid())
  userId            Int      @unique @default(autoincrement())
  phone             String   @unique
  name              String?
  email             String?  @unique
  gender            String?
  dob               String?
  preference        String?
  profile_image_url String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model OtpAttempt {
  id           String   @id @default(uuid())
  phoneNumber  String
  otpHash      String
  expiresAt    DateTime
  ipAddress    String?
  isSignup     Boolean  @default(false)
  sessionId    String?
  smsProvider  String?
  smsStatus    String?
  attempts     Int      @default(0)
  verifiedAt   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model PushSubscription {
  id        String   @id @default(cuid())
  endpoint  String   @unique
  p256dh    String
  auth      String
  userType  String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
